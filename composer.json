{
  "name": "minvws/audit-logger",
  "description": "Generic audit logger",
  "keywords": [
    "audit",
    "logging"
  ],
  "type": "library",
  "license": "EUPL",
  "authors": [
    {
      "name": "Rick Lambrechts",
      "email": "rick@rl-webdiensten.nl"
    },
    {
      "name": "Joshua Thijssen",
      "email": "jthijssen@noxlogic.nl"
    }
  ],
  "require": {
    "php": "^8.0",
    "nesbot/carbon": "^2.66"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0",
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.23 || ^5.0",
    "phpstan/phpstan": "^1.7",
    "squizlabs/php_codesniffer": "^3.6",
    "mockery/mockery": "^1.4.3"
  },
  "autoload": {
    "psr-4": {
      "MinVWS\\AuditLogger\\": "src/"
    },
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "MinVWS\\AuditLogger\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
        "vendor/bin/phpcs",
        "vendor/bin/phpunit",
        "vendor/bin/phpstan analyse",
        "vendor/bin/psalm"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
